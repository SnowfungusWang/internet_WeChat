.detail_activityName,.detail_name,.detail_school {
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  font-size: 30rpx;
  margin: 10rpx 30rpx ;
  height: 100rpx;
}
.activityName,.name,.school{
  color: #68015D;
  flex: 1;
border: 1rpx solid #68015D;
box-shadow: 0 0 5rpx #68015D;
font-size: 28rpx;
padding: 15rpx;
}
.detail_selfInfo,.detail_other,.detail_contact{
  margin: 0 30rpx;
  font-size: 30rpx;
}
.selfInfo,.other,.contact{
  border: 1rpx solid #68015D;
  box-shadow: 0 0 5rpx #68015D;
  width: 329px;
  margin: 10rpx 0;
  padding: 15rpx;
  font-size: 28rpx;
}
.detail_ddl{
  margin: 10rpx 30rpx;
  font-size: 30rpx;
}
.submit,.delete{
  margin-top: 20rpx;
  background-color: #68015D;
  color: #fff;
  width: 690rpx;
}
