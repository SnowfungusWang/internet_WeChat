<view class='container'>
  <view class='basicInfo'>
    <image class="avatar" src="{{avatar}}"></image>
    <view class='word'>
      <view class='username'>姓名：{{name}}</view>
      <view class='studentId'>学号：{{studentId}}</view>
    </view>
  </view>

  <view class='detailList'>
    <navigator url="../userInfo/userInfo" class="navigator">
      <view class="navigator-text">个人信息</view>
      <view class="navigator-arrow"></view>
    </navigator>
    <navigator url="../needMemberList/needMember" class="navigator">
      <view class="navigator-text">我的招募</view>
      <view class="navigator-arrow"></view>
    </navigator>
    <navigator url="../needTeamList/needTeam" class="navigator">
      <view class="navigator-text">我的组队</view>
      <view class="navigator-arrow"></view>
    </navigator>
    <navigator url="../aboutMore/aboutMore" class="navigator">
      <view class="navigator-text">关于我们</view>
      <view class="navigator-arrow"></view>
    </navigator>
  
  </view>

  <view newButton>
    <button class='button' bindtap='needmember'>添加招募</button>
    <button class='button' bindtap='needteam'>添加组队申请</button>
  </view>

</view>


